					authInstance.signIn().then(function(){
						console.log("then after sign in....");
						var gmail = authInstance.currentUser.get().getBasicProfile().getEmail();
						var credential = authInstance.currentUser.get().getAuthResponse();
						$.ajax({
							method: "POST",
